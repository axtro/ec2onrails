<% @ports.each do |port| %>
check process mongrel_<%= port %> with pidfile /mnt/<%= name %>/shared/log/mongrel.<%= port %>.pid
  start program = "/usr/local/ec2onrails/bin/mongrel_start <%= name %> --only <%= port %>" 
  stop program = "/usr/local/ec2onrails/bin/mongrel_stop <%= name %> --only <%= port %>" 
  if totalmem is greater than 150.0 MB for 4 cycles then restart 
  if cpu is greater than 80% for 4 cycles then restart
  if failed port <%= port %> with timeout 10 seconds then restart
  if 20 restarts within 20 cycles then timeout
  mode manual
  group app

<% end %>
