# This script updates the value of "environment" in the the mongrel_cluster
# config file.

require "yaml"
require "erb"

if ARGV.length < 1
  puts "usage: set_rails_env [--application <app name>] <value>"
  exit 1
end

application = "app"

if ARGV.length > 1 && ARGV.first == '--application'
 application = ARGV[1]
end

@rails_env = ARGV.last

# update mongrel_cluster config
config = YAML::load_file("/etc/mongrel_cluster/#{application}.yml")
config["environment"] = @rails_env
File.open("/etc/mongrel_cluster/#{application}.yml", 'w') do |f|
  YAML.dump(config, f)
end
